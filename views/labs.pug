extends main.pug

block styles
  style.
    .labs-container {
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
      justify-content: center;
    }
    .lab-card {
      flex: 0 1 calc(25% - 1rem);
      min-width: 250px;
      max-width: 300px;
      margin: 0.5rem;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .lab-card:hover {
      transform: scale(1.05);
      box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }
    @media (max-width: 1200px) {
      .lab-card {
        flex: 0 1 calc(33.333% - 1rem);
      }
    }
    @media (max-width: 900px) {
      .lab-card {
        flex: 0 1 calc(50% - 1rem);
      }
    }
    @media (max-width: 600px) {
      .lab-card {
        flex: 0 1 100%;
        max-width: 100%;
      }
    }

block content
  div.container
    h1.title.center-align= lab.title
    p.subtitle.center-align= lab.description
    
    div.card
      div.card-content
        h2 Detalles del Laboratorio
        table.table
          tr
            th ID
            td= lab.id
          tr
            th Título
            td= lab.title
          tr
            th Descripción
            td= lab.description 
    
    div.center-align.mt-4
      // Use view route with correct lab ID
      a(href=`/labs/${lab.id}/view`).button.filled.primary Ver Laboratorio Completo
      a(href="/labs").button.outlined.secondary Volver al Inicio