extends main.pug

block content
  div(class="container has-text-centered")
    h1(class="title is-1 has-text-white")= lab.title
    p(class="subtitle is-4 has-text-white")= lab.description
    
    div(class="box has-background-dark has-text-white mt-5")
      h2(class="title is-4 has-text-white") Detalles del Laboratorio
      
      table(class="table is-fullwidth has-background-dark has-text-white")
        tbody
          tr
            th(class="has-text-white") ID
            td(class="has-text-white")= lab.id
          tr
            th(class="has-text-white") Título
            td(class="has-text-white")= lab.title
          tr
            th(class="has-text-white") Descripción
            td(class="has-text-white")= lab.description 
    
    div(class="buttons is-centered mt-5")
      a(href=`/labs/${lab.id}/view` class="button is-primary is-large")
        span(class="icon")
          i(class="fas fa-eye")
        span Ver Laboratorio
      
      a(href="/" class="button is-light")
        span(class="icon")
          i(class="fas fa-arrow-left")
        span Volver al Inicio
      
    div(class="has-text-centered mt-4")
      p(class="is-size-7 has-text-grey-light") Ruta del archivo: #{lab.relative_path}